<?xml version="1.0" encoding="UTF-8"?>
<template>
	<name>Oneliner</name>
	<preview>template_oneline.png</preview>
	<papersize bboxx="0" bboxy="30" bboxw="0" bboxh="760">A4</papersize>
	
	<context level="page"><!-- page | family | subfamily -->
		<text>##PAGENUMBER##</text>
		<textstyle name="aname">
			<font>mono</font><!-- Will be processed through fontconfig which finally will give a font name whatever you write -->
			<fontsize>13.0</fontsize>
			<lineheight>15.0</lineheight>
			<!-- Here think that margins are relative to the whole page -->
			<margintop>20.0</margintop>
			<marginleft>530</marginleft>
		</textstyle>
	</context>
	
	<context level="family">
		<text>++++++++++++++++++++++++</text>
		<textstyle name="bname">
			<font>Helvetica</font>
			<fontsize>18.0</fontsize>
			<color>#000</color>
			<lineheight>24.0</lineheight>
			<margintop>18.0</margintop>
			<marginleft>120.0</marginleft>
			<marginbottom>15.0</marginbottom>
		</textstyle>
	</context>
	
	<context level="subfamily">
		<text>
			##FAMILY## ##SUBFAMILY##
		</text>
		<textstyle name="samplename">
			<font>_FONTMATRIX_</font>
			<fontsize>12.0</fontsize>
			<lineheight>16.0</lineheight>
			<margintop>0.0</margintop>
			<marginleft>120.0</marginleft>
			<marginright>300.0</marginright>
			<marginbottom>0.0</marginbottom>
		</textstyle>
	</context>
</template>
