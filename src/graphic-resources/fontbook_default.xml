<?xml version="1.0" encoding="UTF-8"?>
<template>
	<name>The default Fontmatrix fontbook template</name>
	<paperwidth>500</paperwidth>
	<paperheight>800</paperheight>
	
	<context level="page"><!-- page | family | subfamily -->
		<text internal="true">PageNumber</text>
		<textstyle name="aname">
			<font>mono</font><!-- Will be processed through fontconfig which finally will give a font name whatever you write -->
			<fontsize>13.0</fontsize>
			<lineheight>15.0</lineheight>
			<!-- Here think that margins are relative to the whole page -->
			<margintop>30.0</margintop>
			<marginleft>450</marginleft>
		</textstyle>
	</context>
	<context level="family">
		<text internal="true">Family</text>
		<textstyle name="bname">
			<font>Helvetica</font>
			<fontsize>18.0</fontsize>
			<lineheight>24.0</lineheight>
			<margintop>5.0</margintop>
			<marginleft>20.0</marginleft>
			<marginbottom>10.0</marginbottom>
		</textstyle>
	</context>
	<context level="subfamily">
		<text internal="true">SubFamily</text>
		<textstyle name="cname">
			<font>Helvetica</font>
			<fontsize>12.0</fontsize>
			<lineheight>24.0</lineheight>
			<margintop>5.0</margintop>
			<marginleft>20.0</marginleft>
			<marginbottom>5.0</marginbottom>
		</textstyle>
	</context>
	<context level="subfamily">
		<text internal="false">
			A sample text,
			Pierre Marchand has wrote
			this amazing piece of software :)
		</text>
		<textstyle name="cname">
			<font>_FONTMATRIX_</font><!-- here is the trick (just available at subfamily level) -->
			<fontsize>12.0</fontsize>
			<lineheight>24.0</lineheight>
			<margintop>5.0</margintop>
			<marginleft>20.0</marginleft>
			<marginbottom>5.0</marginbottom>
		</textstyle>
	</context>
</template>
